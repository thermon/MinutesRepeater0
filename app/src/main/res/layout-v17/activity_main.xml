<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.therm.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <CheckBox
            android:id="@+id/TimeZone1Enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TimeZone1EndTimeValue"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/checkBox_Time1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="1dp" />

        <Button
            android:id="@+id/TimeZone1StartTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TimeZone1Enable"
            android:layout_toStartOf="@+id/TimeZone2StartTimeValue"
            android:text="@string/button_StartTime1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TimeZone1StartTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TimeZone1StartTimeButton"
            android:layout_below="@+id/TimeZone1Enable"
            android:layout_toEndOf="@+id/TimeZone1StartTimeButton"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/textView_StartTime1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/TImeZone1EndTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TimeZone1Enable"
            android:layout_toEndOf="@+id/TimeZone1StartTimeValue"
            android:text="@string/button_EndTime1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TimeZone1EndTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TImeZone1EndTimeButton"
            android:layout_alignEnd="@+id/TImeZone2EndTimeValue"
            android:layout_alignTop="@+id/TImeZone1EndTimeButton"
            android:layout_toEndOf="@+id/TImeZone1EndTimeButton"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/textView_EndTime1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/TimeZone2Enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TimeZone1EndTimeValue"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TimeZone1StartTimeButton"
            android:text="@string/checkBox_Time2" />

        <Button
            android:id="@+id/TimeZone2StartTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TimeZone2Enable"
            android:text="@string/button_StartTime2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TimeZone2StartTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TImeZone2EndTimeButton"
            android:layout_alignTop="@+id/TImeZone2EndTimeButton"
            android:layout_toEndOf="@+id/TimeZone2StartTimeButton"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/textView_StartTime2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/TImeZone2EndTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TimeZone2Enable"
            android:layout_toEndOf="@+id/TimeZone2StartTimeValue"
            android:text="@string/button_EndTime2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TImeZone2EndTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TImeZone2EndTimeButton"
            android:layout_below="@+id/TimeZone2Enable"
            android:layout_toEndOf="@+id/TImeZone2EndTimeButton"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/textView_EndTime2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/ReferencedToTheHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TImeZone2EndTimeValue"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TimeZone2StartTimeButton"
            android:text="@string/checkbox_ReferencedToTheHour"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/intervalDecrease"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/intervalIncrease"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/intervalIncrease"
            android:text="@string/decrease"
            android:textSize="8sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="SmallSp"
            tools:layout_editor_absoluteY="297dp" />

        <SeekBar
            android:id="@+id/intervalSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/intervalIncrease"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/intervalIncrease"
            android:layout_below="@+id/textView"
            android:max="58"
            android:visibility="visible"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/intervalIncrease"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TImeZone2EndTimeValue"
            android:layout_below="@+id/intervalSeekBar"
            android:maxWidth="5dp"
            android:text="@string/increase"
            android:textAllCaps="false"
            android:textIsSelectable="false"
            android:textSize="8sp"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/intervalNumber"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ReferencedToTheHour"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/text_RepeaterInterval"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="290dp" />

        <TextView
            android:id="@+id/intervalNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/intervalSeekBar"
            android:layout_alignRight="@+id/intervalSeekBar"
            android:layout_below="@+id/ReferencedToTheHour"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/_60"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="319dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nextTime"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/intervalDecrease"
            android:layout_toStartOf="@+id/nextTime"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/textView_NextTimeText"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="4dp" />

        <TextView
            android:id="@+id/nextTime"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intervalIncrease"
            android:layout_toStartOf="@+id/intervalIncrease"
            android:foregroundGravity="left|center_vertical"
            android:gravity="center_vertical|center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/textView_Time"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/intervalSeekBar" />

        <TextView
            android:id="@+id/nextTimeOffset"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nextTime"
            android:layout_alignEnd="@+id/intervalIncrease"
            android:layout_alignRight="@+id/intervalIncrease"
            android:layout_toEndOf="@+id/nextTime"
            android:text="@string/textView_Offset"
            android:textSize="14sp" />

        <Button
            android:id="@+id/nowTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:text="@string/button_SoundTest"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="37dp" />

        <TextView
            android:id="@+id/nowTime"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nowTimeButton"
            android:layout_alignStart="@+id/nextTime"
            android:layout_alignTop="@+id/nowTimeButton"
            android:layout_toStartOf="@+id/nowTimeOffset"
            android:gravity="center_vertical|center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/textView_Time"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/nowTimeOffset"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nowTime"
            android:layout_alignBottom="@+id/nowTime"
            android:layout_alignEnd="@+id/nextTimeOffset"
            android:layout_alignLeft="@+id/nextTimeOffset"
            android:layout_alignRight="@+id/nextTimeOffset"
            android:layout_alignStart="@+id/nextTimeOffset"
            android:text="@string/textView_Offset"
            android:textSize="14sp" />

        <Space
            android:id="@+id/space2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_below="@+id/intervalSeekBar"
            android:layout_toEndOf="@+id/intervalDecrease"
            android:layout_toStartOf="@+id/intervalIncrease" />

    </RelativeLayout>

    <ToggleButton
        android:id="@+id/runOnBootComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/executeOnBootComplete"
        android:textOff="@string/executeOnBootComplete_off"
        android:textOn="@string/executeOnBootComplete_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>