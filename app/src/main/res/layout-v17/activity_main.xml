<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.therm.MainActivity">

   <Switch
       android:id="@+id/switch1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_columnSpan="2"
       android:layout_marginEnd="8dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="8dp"
       android:text="@string/switch_RepeaterByTime"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/nowTimeButton" />

   <TextView
       android:id="@+id/nowTime"
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:layout_marginBottom="8dp"
       android:layout_marginEnd="16dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="16dp"
       android:paddingLeft="4dp"
       android:paddingRight="4dp"
       android:text="@string/textView_NowTime"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toTopOf="@+id/switch1"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/nowTimeButton"
       app:layout_constraintTop_toTopOf="parent"/>

   <Button
       android:id="@+id/nowTimeButton"
       android:layout_width="wrap_content"
       android:layout_height="48dp"
       android:layout_columnSpan="2"
       android:layout_marginEnd="8dp"
       android:layout_marginStart="32dp"
       android:layout_marginTop="8dp"
       android:layout_rowSpan="2"
       android:text="@string/button_SoundTest"
       android:visibility="visible"
       app:layout_constraintEnd_toStartOf="@+id/nowTime"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>

   <TextView
       android:id="@+id/nextTime"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="16dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="16dp"
       android:gravity="center_horizontal"
       android:paddingLeft="4dp"
       android:paddingRight="4dp"
       android:text="@string/textView_NextTime"
       android:textSize="24sp"
       android:textStyle="bold"
       android:visibility="visible"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/textView2"
       app:layout_constraintTop_toBottomOf="@+id/intervalSeekBar"/>

   <CheckBox
       android:id="@+id/ReferencedToTheHour"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:text="@string/checkbox_ReferencedToTheHour"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/timezones"
       android:layout_marginStart="16dp" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="8dp"
       android:layout_marginStart="32dp"
       android:layout_marginTop="24dp"
       android:text="@string/textView_NextTimeText"
       android:textSize="14sp"
       android:textStyle="bold"
       android:visibility="visible"
       app:layout_constraintEnd_toStartOf="@+id/nextTime"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/intervalSeekBar"/>

   <SeekBar
       android:id="@+id/intervalSeekBar"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginEnd="8dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="16dp"
       android:layout_weight="1"
       android:max="58"
       android:visibility="visible"
       app:layout_constraintEnd_toStartOf="@+id/intervalIncrease"
       app:layout_constraintStart_toEndOf="@+id/intervalDecrease"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

   <Button
       android:id="@+id/intervalIncrease"
       android:layout_width="32dp"
       android:layout_height="40dp"
       android:layout_marginEnd="24dp"
       android:layout_marginTop="4dp"
       android:layout_weight="1"
       android:maxWidth="5dp"
       android:text="＞"
       android:textAllCaps="false"
       android:textIsSelectable="false"
       android:textSize="8sp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
       tools:ignore="SmallSp" />

   <Button
       android:id="@+id/intervalDecrease"
       android:layout_width="32dp"
       android:layout_height="40dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="4dp"
       android:layout_weight="1"
       android:text="＜"
       android:textSize="8sp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
       tools:ignore="SmallSp" />

   <GridLayout
       android:id="@+id/timezones"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="16dp"
       android:layout_marginStart="16dp"
       android:columnCount="4"
       android:rowCount="7"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/switch1">

      <CheckBox
          android:id="@+id/TimeZone1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnSpan="4"
          android:text="@string/checkBox_Time1" />

      <Button
          android:id="@+id/TimeZone1_Start"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_StartTime1" />

      <TextView
          android:id="@+id/TimeZone1_Start_Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/textView_StartTime1"
          android:textSize="24sp"
          android:textStyle="bold" />

      <Button
          android:id="@+id/TImeZone1_End"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_EndTime1" />

      <TextView
          android:id="@+id/TimeZone1_End_Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/textView_EndTime1"
          android:textSize="24sp"
          android:textStyle="bold" />

      <CheckBox
          android:id="@+id/TimeZone2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnSpan="4"
          android:text="@string/checkBox_Time2" />

      <Button
          android:id="@+id/TimeZone2_Start"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_StartTime2" />

      <TextView
          android:id="@+id/TimeZone2_Start_Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/textView_StartTime2"
          android:textSize="24sp"
          android:textStyle="bold" />

      <Button
          android:id="@+id/TImeZone2_End"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_EndTime2" />

      <TextView
          android:id="@+id/TImeZone2_End_Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/textView_EndTime2"
          android:textSize="24sp"
          android:textStyle="bold" />
   </GridLayout>

   <LinearLayout
       android:id="@+id/linearLayout3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginEnd="16dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="8dp"
       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/ReferencedToTheHour">

      <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_weight="1"
          android:text="@string/text_RepeaterInterval"
          android:textSize="14sp"
          android:textStyle="bold"
          android:visibility="visible"
          app:layout_constraintStart_toStartOf="parent"
          tools:layout_editor_absoluteY="290dp" />

      <TextView
          android:id="@+id/intervalNumber"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="end"
          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:text="TextView"
          tools:layout_editor_absoluteX="39dp"
          tools:layout_editor_absoluteY="319dp" />

   </LinearLayout>

</android.support.constraint.ConstraintLayout>